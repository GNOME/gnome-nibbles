{
    "app-id": "org.gnome.Nibbles",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-nibbles",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=fallback-x11",
        /* Wayland access */
        "--socket=wayland",
        /* Sound! */
        "--socket=pulseaudio",
        /* OpenGL access */
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libgnome-games-support",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libgnome-games-support.git",
                    "tag": "2.0.0"
                }
            ]
        },
        {
            "name": "gnome-nibbles",
            "buildsystem": "meson",
            "config-opts": [
                "-Dappend_to_version= (GNOME flatpak)",
                "-Dwebsite=https://gitlab.gnome.org/GNOME/gnome-nibbles"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gnome-nibbles.git"
                }
            ]
        }
    ]
}
